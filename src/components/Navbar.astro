---
import {
    IconDeviceDesktopCode,
    IconNews,
    IconBrush,
    IconUserScan,
    IconBrandGithub,
    IconMail,
} from "@tabler/icons-react";
import IconLogo from "./IconLogo.astro";
---

<nav
    class="relative overflow-hidden rounded-xl border border-blue-500/20 mx-4 my-2"
>
    <div
        class="absolute inset-0 bg-gradient-to-r from-blue-950 via-blue-900 to-blue-950 backdrop-blur-md"
    >
    </div>
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute h-4 w-4 rounded-full bg-blue-400/10 animate-float top-4 left-[10%]"
        >
        </div>
        <div
            class="absolute h-3 w-3 rounded-full bg-blue-400/10 animate-float top-8 left-[20%] [animation-delay:0.5s]"
        >
        </div>
        <div
            class="absolute h-5 w-5 rounded-full bg-blue-400/10 animate-float top-6 left-[80%] [animation-delay:1s]"
        >
        </div>
        <div
            class="absolute h-6 w-6 rounded-full bg-blue-400/10 animate-float top-2 left-[60%] [animation-delay:1.5s]"
        >
        </div>
    </div>
    <div class="relative px-4 sm:px-8 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3 group">
                <div class="relative">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-blue-500 to-cyan-400 rounded-lg blur group-hover:blur-md transition-all duration-300"
                    >
                    </div>
                    <!-- <IconDeviceDesktopCode className="text-white w-8 h-8 " /> -->
                    <IconLogo className="text-white w-8 h-8  " />
                </div>
                <span class="text-xl font-bold text-white">JotaEmePM.dev</span>
            </div>

            <!-- Menu -->
            <div class="hidden md:flex items-center space-x-10">
                <a href="#" class="relative group">
                    <div class="flex items-center">
                        <IconNews className="text-white w-6 h-6 " />
                        <span
                            class="text-blue-100 group-hover:text-white transition-colors duration-300"
                            >Blog</span
                        >
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white/20 group-hover:w-full transition-all duration-500 delay-100"
                        >
                        </div>
                    </div>
                </a>
                <a href="#" class="relative group">
                    <div class="flex items-center">
                        <IconBrush className="text-white w-6 h-6 " />
                        <span
                            class="text-blue-100 group-hover:text-white transition-colors duration-300"
                            >Portafolio</span
                        >
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white/20 group-hover:w-full transition-all duration-500 delay-100"
                        >
                        </div>
                    </div>
                </a>
                <a href="#" class="relative group">
                    <div class="flex items-center">
                        <IconUserScan className="text-white w-6 h-6 " />
                        <span
                            class="text-blue-100 group-hover:text-white transition-colors duration-300"
                            >Perfil</span
                        >
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white/20 group-hover:w-full transition-all duration-500 delay-100"
                        >
                        </div>
                    </div>
                </a>
                <a href="#" class="relative group">
                    <div class="flex items-center">
                        <IconBrandGithub className="text-white w-6 h-6 " />
                        <span
                            class="text-blue-100 group-hover:text-white transition-colors duration-300"
                            >Github</span
                        >
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white/20 group-hover:w-full transition-all duration-500 delay-100"
                        >
                        </div>
                    </div>
                </a>
                <a href="#" class="relative group">
                    <div class="flex items-center">
                        <IconMail className="text-white w-6 h-6 " />
                        <span
                            class="text-blue-100 group-hover:text-white transition-colors duration-300"
                            >Contacto</span
                        >
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-cyan-400 group-hover:w-full transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-white/20 group-hover:w-full transition-all duration-500 delay-100"
                        >
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</nav>
